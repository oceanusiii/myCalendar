<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical" >
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#222222"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:id="@+id/edit_shift_tvHead"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="Head"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/edit_shift_ibtnClose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@android:drawable/ic_delete" />

    </LinearLayout>
	
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#919191"
        android:weightSum="100"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#818181"
            android:layout_weight="5" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:weightSum="2" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:text="Shift: " />

            <Spinner
                android:id="@+id/edit_shift_spnShift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#818181"
            android:layout_weight="5" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:weightSum="5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                	android:layout_weight="1"
                	android:textColor="#ffffff"
                	android:layout_marginLeft="10dp"
                    android:text="Content: " />

                <EditText
                    android:id="@+id/edit_shift_edtContent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                	android:layout_weight="1"
                	android:textColor="#ffffff"
                    android:ems="10" >

                    <requestFocus />
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="2"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                	android:textColor="#ffffff"
                	android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Start time: " />

                <TextView
                    android:id="@+id/edit_shift_tvStartTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                	android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="2"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                	android:textColor="#ffffff"
                	android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="End time: " />

                <TextView
                    android:id="@+id/edit_shift_tvEndTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                	android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#818181"
            android:layout_weight="5" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_weight="20" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="2"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                	android:textColor="#ffffff"
                	android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Notification: " />

                <Switch
                    android:id="@+id/edit_shift_sbtnNotification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="2"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/TextView11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                	android:textColor="#ffffff"
                	android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Date: " />

                <TextView
                    android:id="@+id/edit_shift_tvNDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                	android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="2"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                	android:textColor="#ffffff"
                	android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Time: " />

                <TextView
                    android:id="@+id/edit_shift_tvNTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                	android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#818181"
            android:layout_weight="5" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="10" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Member"
                android:textColor="#ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5" >

                <ImageView
                    android:id="@+id/shift_detail_ivMember1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="memberSelect"
                    android:src="@drawable/memoff" />

                <ImageView
                    android:id="@+id/shift_detail_ivMember2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="memberSelect"
                    android:src="@drawable/memoff" />

                <ImageView
                    android:id="@+id/shift_detail_ivMember3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="memberSelect"
                    android:src="@drawable/memoff" />

                <ImageView
                    android:id="@+id/shift_detail_ivMember4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="memberSelect"
                    android:src="@drawable/memoff" />

                <ImageView
                    android:id="@+id/shift_detail_ivMember5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="memberSelect"
                    android:src="@drawable/memoff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/shift_detail_ivMember6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="memberSelect"
                    android:src="@drawable/memoff" />

                <ImageView
                    android:id="@+id/shift_detail_ivMember7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="memberSelect"
                    android:src="@drawable/memoff" />

                <ImageView
                    android:id="@+id/shift_detail_ivMember8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="memberSelect"
                    android:src="@drawable/memoff" />

                <ImageView
                    android:id="@+id/shift_detail_ivMember9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="memberSelect"
                    android:src="@drawable/memoff" />

                <ImageView
                    android:id="@+id/shift_detail_ivMember10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="memberSelect"
                    android:src="@drawable/memoff" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#818181"
            android:layout_weight="5" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/edit_shift_ibtnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#BC1F1D"
                android:text="DELETE" />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>
